<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_votemovie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="电影名"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/add_votemovie_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="电影简介"
            android:maxLines="1"
            android:singleLine="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_votemovie_imageurl"
            android:hint="电影图片url"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_votemovie_score"
            android:hint= "电影评分"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_votemovie_type"
            android:hint= "电影类别"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_votemovie_star"
            android:hint= "电影演员"/>

        <Button
            android:id="@+id/commit_add_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="提交" />

        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="返回" />

    </LinearLayout>
</LinearLayout>